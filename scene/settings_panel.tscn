[sub_resource type="GDScript" id="GDScript_rb3pu"]
resource_name = "font_size"
script/source = "extends OptionButton

func _enter_tree() -> void:
	owner.font_size = self
	
	for i in range(30, 82, 2):
		add_item(str(i))

func _on_item_selected(index: int) -> void: SettingsManager.changed_settings.general.font_size = 30 + (2  * index)
"

[sub_resource type="GDScript" id="GDScript_ub00n"]
resource_name = "font_scale"
script/source = "extends OptionButton

func _enter_tree() -> void:
	#owner.font_scale = self
	
	for i in range(50, 160, 10):
		add_item(str(i) + &\"%\")

func _on_item_selected(index: int) -> void:
	var distance: float = 5 - index
	SettingsManager.changed_settings.general.font_scale = 1.0 - (distance / 10.0)
"

[sub_resource type="GDScript" id="GDScript_w58jy"]
resource_name = "lines_shown"
